
<section>
    <div class="row mt-4">
        <a href="/admin/add-product" class="btn btn-success mt-4 ml-auto">Add products</a>
        </div>
    <div class="container" >
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            {{#each products}}
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px;height: 50px;"src="{{this.image}}" alt="img"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>